<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="actionBarTabTextStyle">@style/Widget.MyTabText</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTabBar</item>

    </style>
    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!--<item name="android:textSize">@dimen/bar_text_size</item>-->
        <item name="android:textColor">@drawable/tekst_bijela</item>
        <item name="android:cacheColorHint">@drawable/pink</item>item/
    </style>

    <style name="Widget.MyTabText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="MyActionBarTabBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:gravity">left</item>
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#DD111111</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
