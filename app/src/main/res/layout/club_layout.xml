<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity$AboutFragment" android:id="@+id/club_layout"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:background="#ff333234">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:layout_gravity="top|left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:minHeight="107dp"
            android:minWidth="107dp"
            android:focusable="false"
            android:background="#ff009688"
            android:longClickable="true"
            android:layout_toStartOf="@+id/club"
            android:adjustViewBounds="true"
            android:maxWidth="107dp"
            android:maxHeight="107dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/ime_kluba"
            android:id="@+id/club"
            android:layout_gravity="top|right"
            android:linksClickable="true"
            android:textColor="#ff009688"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/naslov"
            android:id="@+id/title" android:layout_below="@+id/club" android:layout_alignLeft="@+id/club"
            android:layout_marginTop="5dp"
            android:textColor="#ff009688"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/vrsta_glazbe"
            android:id="@+id/music"
            android:layout_below="@+id/title" android:layout_alignLeft="@+id/title"
            android:layout_marginTop="5dp"
            android:textColor="#ff009688"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tekst"
            android:id="@+id/text"
            android:longClickable="true"
            android:textColor="#ff009688"
            android:layout_below="@+id/logo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
</RelativeLayout>