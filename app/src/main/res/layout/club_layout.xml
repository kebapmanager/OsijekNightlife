<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".MainActivity$AboutFragment"
                android:id="@+id/club_layout"
                android:focusableInTouchMode="true"
                android:clickable="false"
                android:background="#fffef6ff"
                android:focusable="false">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:id="@+id/club_relative_light"
            android:background="@drawable/blue_light_background">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tekst"
                android:id="@+id/text"
                android:longClickable="true"
                android:layout_below="@+id/club" android:layout_toRightOf="@+id/logo" android:layout_toEndOf="@+id/logo"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/ime_kluba"
                android:id="@+id/club"
                android:layout_gravity="top|right"
                android:linksClickable="false"
                android:layout_alignTop="@+id/logo"
                android:layout_toRightOf="@+id/logo"
                android:layout_toEndOf="@+id/logo"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/logo"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:minHeight="150dp"
                android:minWidth="150dp"
                android:background="#3f51b5"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="false"
                android:contentDescription="@string/image_description"
                android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_margin="5dp"/>
    </RelativeLayout>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView_club_layout"
            android:layout_below="@+id/club_relative_light" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="5dp"
            android:layout_above="@+id/club_frame_light"/>
    <FrameLayout android:layout_width="fill_parent" android:layout_height="50dp" android:layout_alignParentBottom="true"
                 android:layout_centerHorizontal="true" android:background="@drawable/blue_light_background"
                 android:id="@+id/club_frame_light">
        <Button style="?android:attr/buttonStyleSmall" android:layout_width="75dp" android:layout_height="wrap_content"
                android:id="@+id/back_button_club" android:layout_gravity="left|center_vertical"
                android:background="@drawable/back_button" android:paddingLeft="10dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:layout_gravity="right|center_vertical"
                      android:gravity="bottom" android:paddingRight="10dp">
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/imageView"
                       android:layout_gravity="center_horizontal" android:background="@drawable/zvezda"/>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/imageView2"
                       android:layout_gravity="center_horizontal" android:background="@drawable/zvezda"/>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/imageView3"
                       android:layout_gravity="center_horizontal" android:background="@drawable/zvezda"/>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/imageView4"
                       android:layout_gravity="center_horizontal" android:background="@drawable/zvezda"/>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/imageView5"
                       android:layout_gravity="center_horizontal" android:background="@drawable/zvezda"/>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>