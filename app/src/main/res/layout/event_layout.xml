<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#fffef6ff" android:weightSum="1">

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:id="@+id/img_event_ispis"
            android:src="@drawable/color_image" android:layout_margin="0dp"
            android:scaleType="centerCrop"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="75dp" android:layout_weight="0.09"
            android:background="@drawable/blue_light_background" android:layout_below="@+id/img_event_ispis"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:id="@+id/frameLayout2">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/event_music" android:layout_gravity="center_horizontal|bottom"
                android:gravity="center_vertical" android:textColor="#ff000000"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/event_club" android:layout_gravity="center" android:gravity="center_vertical"
                android:textColor="@drawable/blue_dark_background"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/event_title" android:layout_gravity="center_horizontal|top"
                android:textColor="#ff000000"/>
    </FrameLayout>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/club_img_button" android:layout_gravity="right"
            android:cropToPadding="true" android:maxHeight="100dp" android:maxWidth="100dp"
            android:scaleType="centerCrop" android:layout_below="@+id/frameLayout2"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/event_text" android:textColor="#ff000000"
            android:layout_below="@+id/frameLayout2" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/club_img_button"
            android:layout_toStartOf="@+id/club_img_button" android:layout_alignParentBottom="true"/>
</RelativeLayout>