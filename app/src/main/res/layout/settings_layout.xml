<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:background="#ffdde5e6" android:id="@+id/settings_relative">
        <GridView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:id="@+id/settings_grid"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_alignParentBottom="true"
                android:layout_below="@+id/textView2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tema"
                android:id="@+id/textView2" android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:gravity="center"
                android:layout_toLeftOf="@+id/settings_grid"/>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_toLeftOf="@+id/settings_grid"
                android:layout_toStartOf="@+id/settings_grid">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Postavke"
                    android:id="@+id/textView" android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>