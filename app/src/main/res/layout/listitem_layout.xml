<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity$AboutFragment"
                android:id="@+id/listitem_layout"
                android:focusableInTouchMode="false"
                android:background="@drawable/color_background"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:clickable="false">

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" android:background="@drawable/color_background">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:longClickable="false"
                android:maxWidth="150dp"
                android:minHeight="100dp"
                android:minWidth="100dp"
                android:maxHeight="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#3f51b5"
                android:focusable="false"
                android:clickable="false"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Event name"
                android:id="@+id/eventName"
                android:textColor="@drawable/color_text"
                android:layout_below="@+id/name"
                android:layout_alignLeft="@+id/name"
                android:layout_alignStart="@+id/name"
                android:focusable="false"
                android:clickable="false" android:layout_gravity="center_horizontal|top"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="People Coming"
                android:id="@+id/peopleComing"
                android:layout_alignBottom="@+id/image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@drawable/color_text"
                android:layout_marginRight="5dp"
                android:focusable="false"
                android:clickable="false" android:layout_gravity="right|bottom"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:id="@+id/name"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/image"
                android:layout_toEndOf="@+id/image"
                android:textColor="@drawable/color_text"
                android:layout_marginLeft="5dp"
                android:focusable="false"
                android:clickable="false" android:layout_gravity="center"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Date"
                android:id="@+id/date"
                android:layout_alignBottom="@+id/image"
                android:textColor="@drawable/color_text"
                android:layout_alignLeft="@+id/eventName"
                android:focusable="false"
                android:clickable="false" android:layout_gravity="right|top"/>
    </FrameLayout>

</RelativeLayout>