<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity$AboutFragment"
                android:id="@+id/listitem_layout"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:background="@drawable/color_background">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:longClickable="false"
            android:maxWidth="150dp"
            android:minHeight="100dp"
            android:nestedScrollingEnabled="false"
            android:minWidth="100dp"
            android:maxHeight="150dp"
            android:background="@drawable/color_image"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image"
            android:layout_toEndOf="@+id/image"
            android:textColor="@drawable/color_text"
            android:layout_marginLeft="5dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Event name"
            android:id="@+id/eventName"
            android:textColor="@drawable/color_text"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:id="@+id/date"
            android:layout_alignBottom="@+id/image"
            android:layout_toEndOf="@+id/image"
            android:textColor="@drawable/color_text"
            android:layout_alignLeft="@+id/eventName"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="People Coming"
            android:id="@+id/peopleComing"
            android:layout_alignBottom="@+id/image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@drawable/color_text"
            android:layout_marginRight="5dp"/>

</RelativeLayout>